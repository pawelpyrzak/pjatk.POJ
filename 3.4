package pl.edu.pja.lab1;

public class PC {
    private final Kind kind;
    private final PcSystem pcSystem;
    private boolean on;
    private final int cores;



    public PC(Kind kind, PcSystem pcSystem,int cores) {
        this.kind = kind;
        this.pcSystem = pcSystem;
        this.on = on;
        this.cores = cores;
    }
    public PC() {
        this.pcSystem = PcSystem.LINUX;
        this.kind = Kind.DESKTOP;
        this.on = true;
        this.cores = 4;
    }

    @Override
    public String toString()
    {
        return "PC{" +
                "pcSystem=" + pcSystem +
                ", kind=" + kind +
                ", on=" + on +
                ", cores=" + cores +
                '}';
    }
    public void informacje()
    {
        System.out.println(this);

    }
}
package pl.edu.pja.lab1;

public enum PcSystem {
    MAC_OS("Big Sur"),
    WINDOWS("10"),
    LINUX("Kali");

    private final String value;

    PcSystem(final String value) {

        this.value = value;
    }

    public String getValue(){
        return value;
    }
    @Override
    public String toString() {
        return value;
    }
}
