package pl.edu.pja.lab1;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.println("Podaj liczbe studentow: ");
        int liczbastudentow = scanner.nextInt();

        scanner.nextLine();
        System.out.println("Podaj imiona studentow: ");
        String name = scanner.nextLine();

        System.out.println("Podaj liczbe punktow: ");
        int points = scanner.nextInt();


        for (int i = 0; i < liczbastudentow - 1; i++)
        {
            System.out.println("Podaj imiona studentow: ");
            String nameTmp = scanner.nextLine();

            scanner.nextLine();
            System.out.println("Podaj liczbe punktow: ");
            int pointsTmp = scanner.nextInt();

            if (points < pointsTmp)
            {
                name = nameTmp;
                points = pointsTmp;
            }
        }
        System.out.println("Najlepszym studentem jest "+name+" z " + points + " punktami");
    }
}
