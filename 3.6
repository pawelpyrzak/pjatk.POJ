public class Player {
    private double life;
    private BulletProofVest bulletProofVest;
    private Weapon weapon;

    public Player(Double life, BulletProofVest bulletProofVest, Weapon weapon) {
        this.life = life;
        this.bulletProofVest = bulletProofVest;
        this.weapon = weapon;
    }

    public void hit(double strength) {
        double power = strength / this.bulletProofVest.getValue();
        this.life = this.life - (power == 0 ? strength : power);
    }

    public double Getlife() {
        return life;
    }

    public Weapon getWeapon() {
        return weapon;
    }

    public String toString() {
        return "Player(" +
                "Life=" + life +
                ", bulletProofVest=" + bulletProofVest +
                ", weapon=" + weapon +
                ")";
    }


